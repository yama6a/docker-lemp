<?xml version="1.0" encoding="UTF-8"?>

<phpunit bootstrap = "vendor/autoload.php"
         backupGlobals               = "false"
         backupStaticAttributes      = "false"
         colors                      = "true"
         convertErrorsToExceptions   = "true"
         convertNoticesToExceptions  = "true"
         convertWarningsToExceptions = "true"
         processIsolation            = "false"
         stopOnFailure               = "false"
         cacheResult ="false"
>

    <testsuites>
        <testsuite name="Project Test Suite">
            <directory>tests</directory>
            <exclude>./tests/FrameworkTest.php</exclude>
        </testsuite>
    </testsuites>

    <php>
        <env name="APP_ENV" value="testing" force="true"/>
        <env name="MYSQL_HOST" value="mysql-test" force="true"/>
        <env name="MYSQL_DATABASE" value="survey_mysql_test_db" force="true"/>
        <env name="MYSQL_USER" value="survey_mysql_test_user" force="true"/>
        <env name="MYSQL_PASSWORD" value="survey_mysql_test_pw" force="true"/>
        <env name="XDEBUG_MODE" value="coverage" force="true"/>

        <ini name="memory_limit" value="2G" />
        <ini name="xdebug.mode" value="coverage" />
    </php>

    <coverage>
        <include>
            <directory suffix=".php">./</directory>
        </include>
    </coverage>

</phpunit>
